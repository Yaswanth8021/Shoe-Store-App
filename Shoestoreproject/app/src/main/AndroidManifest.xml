<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoestoreproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shoestoreproject">
        <activity android:name=".activities.Splash_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.PlacedOrderActivity" />
        <activity android:name=".activities.NavCategoryActivity" />
        <activity android:name=".activities.DetailedActivity" />
        <activity android:name=".activities.ViewAllActivity" />
        <activity android:name=".activities.Login_user" />
        <activity android:name=".activities.registration" />
        <activity android:name=".activities.welcomeScreen">

        </activity>
        <activity android:name=".activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>